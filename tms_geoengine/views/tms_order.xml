<odoo>

    <record model="ir.ui.view" id="tms_order_form_view">
        <field name="name">tms.order.form</field>
        <field name="model">tms.order</field>
        <field name="inherit_id" ref="tms.tms_order_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="map" string="Map">
                    <field name='destination_shape' widget="geo_edit_map" />
                    <button
                        string="GeoCode Location"
                        name="geo_localize"
                        colspan="2"
                        icon="fa-check"
                        type="object"
                    />
                </page>
            </xpath>
        </field>
    </record>

    <record id="tms.action_tms_dash_order" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">kanban,tree,geoengine,calendar,form</field>
        <field name="search_view_id" ref="tms.tms_order_view_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Order.
            </p>
        </field>
    </record>

    <!-- GeoEngine views -->
    <record id="tms_order_map_view" model="ir.ui.view">
        <field name="name">ir.ui.view.tms.order.map</field>
        <field name="arch" type="xml">
            <geoengine>
                <field name="display_name" select="1" />
                <field name='stage_name' string="Stage" />
                <field name="destination_phone" />
                <field name="destination_mobile" />
                <field name="destination_street" />
                <field name="destination_street2" />
                <field name="destination_city" />
                <field name="destination_state_name" />
                <field name='destination_zip' />
                <field name="destination_country_name" />
                <field name="destination_shape" />
                <field name="driver_id" />
                <!-- <field name="custom_color" /> -->
            </geoengine>
        </field>
        <field name="priority" eval="16" />
        <field name="model">tms.order</field>
    </record>
    <record id="geoengine_vector_layer_tms0" model="geoengine.vector.layer">
        <field
            name="geo_field_id"
            ref="tms_geoengine.field_tms_order__destination_shape"
        />
        <field name="name">TMS Order Point</field>
        <field name="classification">unique</field>
        <field name="sequence" eval="6" />
        <field name="view_id" ref="tms_order_map_view" />
        <field name="geo_repr">colored</field>
        <field name="nb_class" eval="1" />
        <field name="attribute_field_id" ref="tms.field_tms_order__stage_name" />
        <field name="begin_color">#D62839</field>
        <field name="end_color">#CCE6F4</field>

    </record>
    <record
        id="geoengine_vector_layer_tmsordertatecoloredcustom0"
        model="geoengine.vector.layer"
    >
        <field
            name="geo_field_id"
            ref="tms_geoengine.field_tms_order__destination_shape"
        />
        <field name="name">TMS Order State colored custom</field>
        <field name="classification">custom</field>
        <field name="sequence" eval="6" />
        <field name="view_id" ref="tms_order_map_view" />
        <field name="geo_repr">colored</field>
        <field name="nb_class" eval="1" />
        <field name="attribute_field_id" ref="tms.field_tms_order__custom_color" />
        <field name="begin_color">#FFFFFF</field>
    </record>
    <record id="geoengine_raster_layer_retailmachineosm" model="geoengine.raster.layer">
        <field name="raster_type">osm</field>
        <field name="name">Open Street Map</field>
        <field name="view_id" ref="tms_order_map_view" />
        <field name="overlay" eval="0" />
    </record>
    <record id="geoengine_raster_layer_basic0" model="geoengine.raster.layer">
        <field name="raster_type">d_wms</field>
        <field name="name">basic</field>
        <field name="url">vmap0.tiles.osgeo.org/wms/vmap0</field>
        <field name="view_id" ref="tms_order_map_view" />
        <field name="overlay" eval="1" />
    </record>


</odoo>
