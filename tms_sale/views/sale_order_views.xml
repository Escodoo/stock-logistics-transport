<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.tms.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button
                    type="object"
                    name="action_view_tms_order"
                    class="oe_stat_button"
                    icon="fa-car"
                    invisible="tms_order_count == 0"
                    groups="tms.group_tms_user"
                >
                    <field
                        name="tms_order_count"
                        widget="statinfo"
                        string="TMS Orders"
                    />
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <field name="has_tms_product" invisible="1" />
                <page name="tms_sale_page" string="TMS" invisible="not has_tms_product">
                    <group>
                        <group
                            name="tms_route_group"
                            string="Route"
                            groups="tms.group_tms_route"
                        >
                            <field name="tms_route_flag" />
                            <field
                                name="tms_route_id"
                                invisible="not tms_route_flag"
                                required="tms_route_flag"
                            />
                            <field
                                name="tms_origin_id"
                                invisible="tms_route_flag"
                                required="not tms_route_flag"
                            />
                            <field
                                name="tms_destination_id"
                                invisible="tms_route_flag"
                                required="not tms_route_flag"
                            />
                        </group>
                        <group
                            name="tms_route"
                            string="Route"
                            groups="!tms.group_tms_route"
                        >
                            <field name="tms_origin_id" required="True" />
                            <field name="tms_destination_id" required="True" />
                        </group>
                        <group name="tms_schedule" string="Schedule">
                            <field
                                name="tms_scheduled_date_start"
                                required="has_tms_product"
                            />
                            <field
                                name="tms_scheduled_date_end"
                                required="has_tms_product"
                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
