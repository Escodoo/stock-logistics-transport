<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.tms.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button
                    type="object"
                    name="action_view_tms_order"
                    class="oe_stat_button"
                    icon="fa-car"
                    attrs="{'invisible': [('tms_order_count', '=', 0)]}"
                    groups="tms.group_tms_user"
                >
                    <field
                        name="tms_order_count"
                        widget="statinfo"
                        string="TMS Orders"
                    />
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <field name="has_tms_product" invisible="1" />
                <page
                    name="tms_sale_page"
                    string="TMS"
                    attrs="{'invisible': [('has_tms_product', '=', False)]}"
                >
                    <group>
                        <group name="tms_route_group" string="Order Info">
                            <field name="tms_route_flag" groups="tms.group_tms_route" />
                            <field
                                name="tms_route_id"
                                attrs="{'invisible': [('tms_route_flag', '=', False)], 'required': [('tms_route_flag', '=', True)]}"
                                groups="tms.group_tms_route"
                            />
                            <field
                                name="tms_origin_id"
                                attrs="{'invisible': [('tms_route_flag', '=', True)], 'required': ['&amp;', ('has_tms_product', '=', True), ('tms_route_flag', '=', False)]}"
                            />
                            <field
                                name="tms_destination_id"
                                attrs="{'invisible': [('tms_route_flag', '=', True)], 'required': ['&amp;', ('has_tms_product', '=', True), ('tms_route_flag', '=', False)]}"
                            />
                        </group>
                        <!-- <group
                            name="tms_route"
                            string="Route"
                            groups="!tms.group_tms_route"
                        >
                            <field
                                name="tms_origin_id"
                                attrs="{'required': [('tms_route_flag', '=', False)]}"
                            />
                            <field
                                name="tms_destination_id"
                                attrs="{'required': [('tms_route_flag', '=', False)]}"
                            />
                        </group> -->
                        <group name="tms_schedule" string="Schedule">
                            <field
                                name="tms_scheduled_date_start"
                                attrs="{'required': [('tms_route_flag', '=', True)]}"
                            />
                            <field
                                name="tms_scheduled_duration"
                                attrs="{'required': [('tms_route_flag', '=', True)]}"
                            />
                            <field
                                name="tms_scheduled_date_end"
                                attrs="{'required': [('tms_route_flag', '=', True)]}"
                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
