<odoo>

    <!-- Res Partner -->
    <record id="view_res_partner_form_inherit_tms" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.tms</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="TMS">
                    <label for="tms_type" string="Type" />
                    <field name="tms_type" />
                </page>
            </xpath>
        </field>
    </record>

    <!-- Drivers -->
    <record id="view_res_partner_tree_tms_driver" model="ir.ui.view">
        <field name="name">res.partner.tree.tms.driver</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="tms_stage" attrs="{'column_invisible': True}" />
                <field
                    name="tms_stage_decoration_color"
                    attrs="{'column_invisible': True}"
                />
                <field name="display_name" string="Name" />
                <field name="age" optional="hide" />
                <field name="gender" optional="hide" />
                <field name="tms_driver_type" optional="show" />
                <field name="tms_driver_license_number" optional="show" />
                <field name="tms_driver_license_type" optional="show" />
                <field name="tms_driver_license_expiration_date" optional="show" />
                <field name="phone" optional="show" />
                <field name="tms_is_external" optional="hide" />
                <field
                    name="tms_stage_id"
                    decoration-danger="tms_stage_decoration_color == 'red'"
                    decoration-warning="tms_stage_decoration_color == 'yellow'"
                    decoration-success="tms_stage_decoration_color == 'green'"
                />
            </tree>
        </field>
    </record>

    <record id="view_res_partner_form_inherit_tms_driver" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.tms.driver</field>
        <field name="model">res.partner</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header>
                    <field
                        name="tms_stage_id"
                        widget="statusbar"
                        domain="[('stage_type', '=', 'driver')]"
                        options="{'clickable':True}, {'fold_field':'fold'}"
                    />
                </header>
            </xpath>
            <xpath expr="//field[@name='company_type']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//span[@name='address_name']//b" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>

            <xpath expr="//field[@name='function']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//group" position="after">
                <group>
                    <group string="Driver Status">
                        <field name="tms_is_external" />
                        <field name="tms_is_training" />
                        <field name="tms_is_active" />
                    </group>
                    <group string="Driver Type">
                        <field name="tms_driver_type" />
                        <field
                            name="tms_driver_license_number"
                            attrs="{'invisible': [('tms_driver_type', '!=', 'terrestrial')]}"
                        />
                        <field
                            name="tms_driver_license_type"
                            attrs="{'invisible': [('tms_driver_type', '!=', 'terrestrial')]}"
                        />
                        <field
                            name="tms_driver_license_expiration_date"
                            attrs="{'invisible': [('tms_driver_type', '!=', 'terrestrial')]}"
                        />
                        <field
                            name="tms_driver_license_file"
                            attrs="{'invisible': [('tms_driver_type', '!=', 'terrestrial')]}"
                        />
                        <field
                            name="tms_distance_traveled"
                            attrs="{'invisible': [('tms_driver_type', '!=', 'terrestrial')]}"
                        />
                        <field
                            name="tms_distance_traveled_uom"
                            attrs="{'invisible': [('tms_driver_type', '!=', 'terrestrial')]}"
                        />
                        <field
                            name="tms_driving_experience_years"
                            attrs="{'invisible': [('tms_driver_type', '!=', 'terrestrial')]}"
                        />
                    </group>
                </group>

            </xpath>

        </field>
    </record>

    <record id="view_res_partner_kanban_tms_driver" model="ir.ui.view">
        <field name="name">tms.driver.view.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_dashboard o_emphasize_colors"
                default_group_by="tms_stage_id"
                group_create="false"
                group_edit="false"
            >
                <field name="id" />
                <field name="name" />
                <field name="display_name" />
                <field name="tms_team_id" />
                <field name="tms_crew_ids" />
                <field name="mobile" />
                <field name="image_128" />
                <field name="tms_is_active" />
                <field
                    name="tms_driver_license_expiration_date"
                /> <!-- Campo da data de expiração da licença -->
                <field name="tms_order_ids" />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="oe_kanban_global_click o_has_icon oe_kanban_content oe_kanban_card"
                        >
                            <div
                                class="o_project_kanban_main d-flex align-items-center justify-content-between gap-2"
                            >
                                <!-- Detalhes principais do motorista -->
                                <div class="o_kanban_primary_left">
                                    <div class="o_primary">
                                        <span
                                            class="o_text_overflow mb-2"
                                            t-att-title="record.name.value"
                                        >
                                            <strong><t
                                                    t-esc="record.name.value"
                                                /></strong>
                                        </span>
                                        <p class="text-muted mb-1">
                                            <span t-if="record.mobile.raw_value">
                                                <span
                                                    class="fa fa-phone me-2"
                                                    aria-label="Mobile"
                                                    title="Mobile"
                                                />
                                                <t t-esc="record.mobile.value" />
                                            </span>
                                        </p>
                                        <p class="text-muted mb-1">
                                            <span t-if="record.tms_team_id.raw_value">
                                                <span
                                                    class="fa fa-users me-2"
                                                    aria-label="Team"
                                                    title="Team"
                                                />
                                                <t t-esc="record.tms_team_id.value" />
                                            </span>
                                        </p>
                                        <p class="text-muted mb-1">
                                            <span t-if="record.tms_crew_ids.raw_value">
                                                <t>Crews:</t>
                                                <span class="oe_kanban_list_many2many">
                                                    <field
                                                        name="tms_crew_ids"
                                                        widget="many2many_tags"
                                                    />
                                                </span>
                                            </span>
                                        </p>
                                        <p class="text-muted mb-1">
                                            <span t-if="record.tms_is_active.raw_value">
                                                <span
                                                    class="badge bg-success"
                                                >Active</span>
                                            </span>
                                            <span t-else=""><span
                                                    class="badge bg-danger"
                                                >Inactive</span></span>
                                        </p>
                                    </div>
                                </div>
                                <!-- Foto do motorista (mover para a direita) -->
                                <div class="o_kanban_image o_kanban_image_top_right">
                                    <img
                                        alt="Driver image"
                                        t-if="record.image_128.raw_value"
                                        t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)"
                                        class="img-fluid rounded-circle"
                                    />
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-3">
                                <div class="oe_kanban_bottom_left">

                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <!-- Adicionando a data de expiração da licença -->
                                    <p class="text-muted mb-0">
                                        <span
                                            t-if="record.tms_driver_license_expiration_date.raw_value"
                                        >
                                            <span
                                                class="fa fa-calendar me-2"
                                                aria-label="License Expiration Date"
                                                title="License Expiration Date"
                                            />
                                            <t
                                                t-esc="record.tms_driver_license_expiration_date.value"
                                            />
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Locations -->
    <record id="view_res_partner_tree_tms_location" model="ir.ui.view">
        <field name="name">res.partner.tree.tms.location</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name" string="Location" />
                <field name="country_id" />
                <field name="state_id" />
                <field name="city" />
                <field name="street" />
                <field name="zip" />
            </tree>
        </field>
    </record>

    <record id="view_res_partner_form_inherit_tms_location" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.tms.location</field>
        <field name="model">res.partner</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//span[@name='address_name']//b" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>

            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//field[@name='function']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//field[@name='title']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>

    <!-- Search -->
    <record id="view_res_partner_search_inherit" model="ir.ui.view">
        <field name="name">res.partner.search.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">          
            <xpath expr="//search" position="inside">   
                <field name="tms_type" />
            </xpath>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_tms_driver" model="ir.actions.act_window">
        <field name="name">Drivers</field>
        <field name="res_model">res.partner</field>
        <field name="domain">[('is_company', '=', False)]</field>
        <field
            name="context"
        >{"search_default_tms_type": "driver", "default_tms_type": "driver"}
        </field>
        <field name="view_mode">kanban,tree,form</field>
        <field
            name="view_ids"
            eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_res_partner_kanban_tms_driver')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_res_partner_tree_tms_driver')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_res_partner_form_inherit_tms_driver')}),
            ]"
        />
    </record>

    <record id="action_tms_location" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">res.partner</field>
        <field
            name="context"
        >{"search_default_tms_type": "location", "default_tms_type": "location"}
        </field>
        <field name="view_mode">tree,form</field>
        <field
            name="view_ids"
            eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_res_partner_tree_tms_location')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_res_partner_form_inherit_tms_location')})
            ]"
        />
    </record>

    <record id="action_tms_config_stage_driver" model="ir.actions.act_window">
        <field name="name">Drivers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
