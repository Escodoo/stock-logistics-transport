<odoo>

    <record id="fleet_vehicle_inherit_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.inherit.view.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form" />
        <field name="arch" type="xml">

            <field name="driver_id" position="before">
                <field name="vehicle_type" />
                <field
                    name="tms_trailer_id"
                    attrs="{'invisible': [('vehicle_type', '!=', 'tractor')]}"
                    context="{'default_vehicle_type': 'trailer'}"
                />
            </field>

            <xpath expr="//form//notebook" position="inside">
                <page string="TMS">

                    <group>
                        <field
                            name="tms_operation"
                            widget="radio"
                            options="{'horizontal': True}"
                        />
                        <label for="tms_capacity">Capacity</label>
                        <div class="d-flex w-25">
                            <field name="tms_capacity" class="w-25" />
                            <field
                                name="tms_cargo_uom_id"
                                attrs="{'invisible': [('tms_operation', '!=', 'cargo')]}"
                                class="w-50"
                            />
                        </div>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="action_tms_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">tree,kanban,pivot,form</field>
        <field name="domain">[('tms_operation', '!=', False)]</field>
    </record>

</odoo>
