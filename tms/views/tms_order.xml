<odoo>


    <!-- TMS Order Tree View -->
    <record id="tms_order_view_tree" model="ir.ui.view">
        <field name="name">tms.order.view.tree</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="stage" attrs="{'column_invisible': True}" />
                <field
                    name="stage_decoration_color"
                    attrs="{'column_invisible': True}"
                />
                <field name="is_closed" attrs="{'column_invisible': True}" />
                <field name="start_trip" attrs="{'column_invisible': True}" />
                <field name="end_trip" attrs="{'column_invisible': True}" />

                <field name="name" />
                <field name="partner_id" widget="many2one_avatar" />
                <field name="driver_id" widget="many2one_avatar" />
                <field name="route_id" optional="show" />
                <field
                    name="origin_location_id"
                    optional="show"
                    widget="many2one_avatar"
                />
                <field
                    name="destination_location_id"
                    optional="show"
                    widget="many2one_avatar"
                />
                <field name="priority" widget="priority" />
                <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                />
                <field
                    name="stage_id"
                    decoration-danger="stage_decoration_color == 'red'"
                    decoration-warning="stage_decoration_color == 'yellow'"
                    decoration-success="stage_decoration_color == 'green'"
                />
                <button
                    name="button_start_order"
                    type="object"
                    string="Start Trip"
                    class="btn btn-primary text-uppercase"
                    attrs="{'invisible': ['|', '|',('start_trip', '=', True), ('end_trip', '=', True), ('is_closed', '=', True)]}"
                />
                <button
                    name="button_end_order"
                    type="object"
                    string="End Trip"
                    class="btn btn-primary text-uppercase"
                    attrs="{'invisible': ['|', '|', ('start_trip', '=', False), ('end_trip', '=', True), ('is_closed', '=', True)]}"
                />
            </tree>
        </field>
    </record>

    <!-- TMS Order Form View -->
    <record id="tms_order_view_form" model="ir.ui.view">
        <field name="name">tms.order.view.form</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <form>

                <!-- Invisible Fields -->
                <field name="active" invisible="1" />
                <field name="stage" invisible="1" />
                <field name="is_closed" invisible="1" />
                <field name="crew_active" invisible="1" />
                <field name="crew_ids_domain" invisible="1" />
                <field name="driver_ids_domain" invisible="1" />
                <field name="vehicle_ids_domain" invisible="1" />
                <field name="start_trip" invisible="1" force_save="1" />
                <field name="end_trip" invisible="1" force_save="1" />

                <!-- Header -->
                <header>
                    <button
                        name="button_start_order"
                        type="object"
                        string="Start Trip"
                        class="btn btn-primary text-uppercase"
                        attrs="{'invisible': ['|', '|',('start_trip', '=', True), ('end_trip', '=', True), ('is_closed', '=', True)]}"
                    />
                    <!-- <button
                        name="button_refresh_duration"
                        type="object"
                        string="Refresh"
                        class="btn btn-secondary text-uppercase"
                        attrs="{'invisible': ['|','|', ('start_trip', '=', False), ('end_trip', '=', True), ('is_closed', '=', True)]}"
                    /> -->
                    <button
                        name="button_end_order"
                        type="object"
                        string="End Trip"
                        class="btn btn-primary text-uppercase"
                        attrs="{'invisible': ['|', '|', ('start_trip', '=', False), ('end_trip', '=', True), ('is_closed', '=', True)]}"
                    />
                    <field
                        name="stage_id"
                        widget="statusbar"
                        domain="[('stage_type', '=', 'order')]"
                        options="{'clickable':True}, {'fold_field':'fold'}"
                    />
                </header>

                <!-- Sheet -->
                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">

                    </div>

                    <widget
                        name="web_ribbon"
                        title="Outgoing"
                        attrs="{'invisible': [('start_trip', '!=', True)]}"
                    />
                    <widget
                        name="web_ribbon"
                        title="Delivered"
                        attrs="{'invisible': [('end_trip', '!=', True)]}"
                    />
                    <!-- <field
                        name="kanban_state"
                        widget="state_selection"
                        class="ml-3 float-right"
                    /> -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Trip Name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="team_id" groups="tms.group_tms_team" />
                            <field
                                name="crew_id"
                                groups="tms.group_tms_crew"
                                domain="[('id', 'in', crew_ids_domain)]"
                            />

                            <field
                                name="driver_id"
                                domain="[('id', 'in', driver_ids_domain)]"
                            />

                            <field
                                name="vehicle_id"
                                domain="[('id', 'in', vehicle_ids_domain)]"
                            />
                            <field name="trailer_id" />
                            <field name="priority" widget="priority" />
                            <field
                                name="tag_ids"
                                widget="many2many_tags"
                                options="{'color_field': 'color', 'no_create_edit': True}"
                            />
                        </group>
                        <group>
                            <field name="route" groups="tms.group_tms_route" />
                            <field
                                name="route_id"
                                attrs="{'invisible': [('route', '=', False)], 'required': [('route', '=', True)] }"
                            />
                            <field
                                name="origin_id"
                                attrs="{'invisible': [('route', '!=', False)]}"
                            />
                            <field
                                name="destination_id"
                                attrs="{'invisible': [('route', '!=', False)], 'required': [('route', '=', False)] }"
                            />
                        </group>
                    </group>
                    <group string="Description" name="description_grp">
                        <field
                            name="description"
                            nolabel="1"
                            colspan="2"
                            placeholder="Add a description for the order..."
                        />
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <page string="Planning" name="planning_page">
                            <group>
                                <field name="scheduled_date_start" />
                                <label for="scheduled_duration">Scheduled Duration
                                </label>
                                <div class="d-flex w-25">
                                    <field name="scheduled_duration" class="w-25" />
                                    <span class="w-75">Hours</span>
                                </div>
                                <field name="scheduled_date_end" />
                            </group>
                        </page>
                        <page string="Trip Tracking" name="tracking_page">
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                                <label for="duration">Duration</label>
                                <div class="d-flex w-25">
                                    <field name="duration" class="w-25" />
                                    <span class="w-75">Hours</span>
                                </div>
                            </group>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="tms_order_view_kanban" model="ir.ui.view">
        <field name="name">tms.order.view.kanban</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" sample="1">
                <field name="name" />
                <field name="vehicle_id" />
                <field name="trailer_id" />
                <field name="route_id" />
                <field name="origin_location_id" />
                <field name="destination_location_id" />
                <field name="partner_id" />
                <field name="team_id" />
                <field name="crew_id" />
                <field name="driver_id" />
                <field name="color" />
                <field name="priority" />
                <field name="scheduled_date_start" />
                <field name="scheduled_date_end" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="tag_ids" />
                <field name="start_trip" />
                <progressbar
                    field="kanban_state"
                    colors='{"done": "success", "blocked": "danger", "normal": "muted"}'
                />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click"
                        >
                            <div class="o_dropdown_kanban dropdown">
                                <a
                                    class="dropdown-toggle o-no-caret btn"
                                    role="button"
                                    data-toggle="dropdown"
                                    data-display="static"
                                    href="#"
                                    aria-label="Dropdown menu"
                                    title="Dropdown menu"
                                >
                                    <span class="fa fa-ellipsis-v" />
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable"><a
                                            role="menuitem"
                                            type="edit"
                                            class="dropdown-item"
                                        >Edit</a></t>
                                    <t t-if="widget.deletable"><a
                                            role="menuitem"
                                            type="delete"
                                            class="dropdown-item"
                                        >Delete</a></t>
                                    <ul
                                        class="oe_kanban_colorpicker"
                                        data-field="color"
                                    />
                                </div>
                            </div>
                            <div class="oe_kanban_content ml-3">
                                <div class="o_kanban_record_title mb-3">
                                    <strong><field name="name" /></strong>
                                </div>
                                <div class="o_kanban_record_subtitle mt-2">
                                    <t t-if="record.partner_id.raw_value">
                                        <span
                                            class="fa fa-user me-2"
                                            title="Parceiro"
                                        />
                                        <span
                                            class="ml-2"
                                            t-esc="record.partner_id.value"
                                        />
                                    </t>
                                    <t
                                        t-if="record.team_id.raw_value or record.crew_id.raw_value"
                                    >
                                        <span
                                            class="fa fa-users me-2"
                                            title="Team/Crew"
                                        />
                                        <t t-if="record.team_id.raw_value">
                                            <span
                                                class="ml-2"
                                                t-esc="record.team_id.value"
                                            />
                                            <span
                                                t-if="record.team_id.raw_value and record.crew_id.raw_value"
                                            >:</span>
                                        </t>
                                        <span
                                            class="ml-2"
                                            t-if="record.crew_id.raw_value"
                                            t-esc="record.crew_id.value"
                                        />
                                    </t>
                                </div>
                                <!-- Vehicle -->
                                <div t-if="record.vehicle_id.raw_value">
                                    <span
                                        class="fa fa-truck me-2"
                                        aria-label="Vehicle"
                                        title="Vehicle"
                                    />
                                    <span
                                        class="ml-2"
                                        t-esc="record.vehicle_id.value"
                                    />
                                </div>
                                <!-- Trailer -->
                                <div t-if="record.trailer_id.raw_value">
                                    <span
                                        class="fa fa-archive me-2"
                                        aria-label="Trailer"
                                        title="Trailer"
                                    />
                                    <span
                                        class="ml-2"
                                        t-esc="record.trailer_id.value"
                                    />
                                </div>
                                <!-- Route -->
                                <div t-if="record.route_id.raw_value" class="mt-2">
                                    <small><b>Route</b></small>
                                    <span class="fa fa-map-o me-2" title="Route" />
                                    <span class="ml-2" t-esc="record.route_id.value" />
                                </div>
                                <!-- Location -->
                                <div
                                    class="mt-2"
                                    t-if="record.origin_location_id.raw_value or record.destination_location_id.raw_value"
                                >
                                    <small><b>Origin/Destination</b></small>
                                    <!-- Origin -->
                                    <div t-if="record.origin_location_id.raw_value">
                                        <span
                                            class="fa fa-play-circle me-2"
                                            title="Origin Location"
                                        />
                                        <span
                                            class="ml-2"
                                            t-esc="record.origin_location_id.value"
                                        />
                                    </div>
                                    <!-- Destination -->
                                    <div
                                        t-if="record.destination_location_id.raw_value"
                                    >
                                        <span
                                            class="fa fa-stop-circle me-2"
                                            title="Destination Location"
                                        />
                                        <span
                                            class="ml-2"
                                            t-esc="record.destination_location_id.value"
                                        />
                                    </div>
                                </div>
                                <!-- Schedule -->
                                <div
                                    class="mt-2"
                                    t-if="record.scheduled_date_start.raw_value or record.scheduled_date_end.raw_value"
                                >
                                    <small><b>Planning</b></small>
                                    <div>
                                        <span
                                            class="fa fa-calendar me-2"
                                            title="Scheduled Date Start"
                                        />
                                        <small
                                            class="ml-2"
                                            t-if="record.scheduled_date_start.raw_value"
                                            t-esc="record.scheduled_date_start.value"
                                        />
                                        <small
                                            class="fa fa-arrow-right me-2"
                                            title="Scheduled Date End"
                                        />
                                        <small
                                            t-if="record.scheduled_date_end.raw_value"
                                            t-esc="record.scheduled_date_end.value"
                                        />
                                    </div>
                                </div>
                                <!-- Shipment Track -->
                                <div
                                    class="mt-2"
                                    t-if="record.date_start.raw_value or record.date_end.raw_value"
                                >
                                    <small><b>Actual</b></small>
                                    <div>
                                        <span
                                            class="fa fa-calendar me-2"
                                            title="Date Start"
                                        />
                                        <small
                                            class="ml-2"
                                            t-if="record.date_start.raw_value"
                                            t-esc="record.date_start.value"
                                        />
                                        <small
                                            class="fa fa-arrow-right me-2"
                                            title="Date Start"
                                        />
                                        <small
                                            t-if="record.date_end.raw_value"
                                            t-esc="record.date_end.value"
                                        />
                                    </div>
                                </div>
                                <div class="o_kanban_tags_section mt-3">
                                    <field
                                        name="tag_ids"
                                        widget="many2many_tags"
                                        options="{'color_field': 'color'}"
                                    />
                                </div>
                                <div class="o_kanban_record_bottom mt-3">
                                    <div class="oe_kanban_bottom_left">
                                        <field
                                            name="priority"
                                            widget="priority"
                                            groups="base.group_user"
                                        />
                                        <field
                                            name="activity_ids"
                                            widget="kanban_activity"
                                        />
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="record.start_trip.raw_value">
                                            <span
                                                class="fa fa-plane text-success mr-2 me-2"
                                                title="Outgoing"
                                            />
                                        </t>
                                        <field
                                            name="kanban_state"
                                            widget="state_selection"
                                            groups="base.group_user"
                                        />
                                        <img
                                            t-att-src="kanban_image('res.partner', 'image_128', record.driver_id.raw_value)"
                                            t-att-title="record.driver_id.value"
                                            width="24"
                                            height="24"
                                            class="oe_kanban_avatar"
                                            alt="Driver"
                                        />
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- TMS Order Search View -->
    <record id="tms_order_view_search" model="ir.ui.view">
        <field name="name">tms.order.search</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id" string="Partner" />
                <field name="team_id" string="Team" />
                <field name="driver_id" string="Driver" />
                <field name="stage" string="Stage" />
                <filter
                    name="is_active"
                    string="Archived"
                    domain="[('active', '=', 'False')]"
                />
                <separator />
                <filter
                    string="To Do"
                    domain="[('stage_id.is_closed', '=', False)]"
                    name="todo"
                />
                <filter
                    string="Unassigned"
                    domain="[('driver_id', '=', False), ('stage_id.is_closed', '=', False)]"
                    name="unassigned"
                />
                <filter
                    string="Unscheduled"
                    domain="[('scheduled_date_end', '=', False), ('stage_id.is_closed', '=', False)]"
                    name="unscheduled"
                />
                <filter
                    string="Outgoing"
                    domain="[('start_trip', '=', True)]"
                    name="outgoing"
                />
                <filter
                    string="Delivered"
                    domain="[('end_trip', '=', True)]"
                    name="delivered"
                />
                <separator />
                <filter
                    string="Today Orders"
                    domain="[
                    ('scheduled_date_start', '&gt;=', (datetime.datetime.combine(datetime.date.today(), datetime.time(0,0,0)))),
                    ('scheduled_date_start', '&lt;', (datetime.datetime.combine(datetime.date.today(), datetime.time(23,59,59))))
                    ]"
                    name="order_today"
                />
                <filter
                    string="Future Orders"
                    domain="[('scheduled_date_start', '&gt;=', (datetime.datetime.combine(datetime.date.today(), datetime.time(0,0,0))))]"
                    name="order_upcoming_all"
                />
                <filter
                    string="Due Within 7 Days"
                    domain="[
                    ('scheduled_date_start', '&gt;=', (datetime.datetime.combine(datetime.date.today(), datetime.time(0,0,0)))),
                    ('scheduled_date_start', '&lt;=', (datetime.datetime.combine((datetime.date.today()+relativedelta(days=6)), datetime.time(23,59,59))))
                    ]"
                    name="order_upcoming_week"
                />
                <filter
                    string="Due Within 30 Days"
                    domain="[
                    ('scheduled_date_start', '&gt;=',(datetime.datetime.combine(datetime.date.today(), datetime.time(0,0,0)))),
                    ('scheduled_date_start', '&lt;=', (datetime.datetime.combine((datetime.date.today()+relativedelta(days=29)), datetime.time(23,59,59))))
                    ]"
                    name="order_upcoming_month"
                />
                <separator />
                <filter
                    string="Create Date"
                    name="filter_create_date"
                    date="create_date"
                />
                <separator />
                <group expand="0" string="Group By">
                    <filter
                        name="partner"
                        string="Partner"
                        domain="[]"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        name="driver"
                        string="Driver"
                        domain="[]"
                        context="{'group_by':'driver_id'}"
                    />
                    <filter
                        name="vehicle"
                        string="Vehicle"
                        domain="[]"
                        context="{'group_by':'vehicle_id'}"
                    />
                    <filter
                        name="trailer"
                        string="Trailer"
                        domain="[]"
                        context="{'group_by':'trailer_id'}"
                    />
                    <separator />
                    <filter
                        name="stage"
                        string="Stage"
                        domain="[]"
                        context="{'group_by':'stage_id'}"
                    />
                    <filter
                        name="priority"
                        string="Priority"
                        domain="[]"
                        context="{'group_by':'priority'}"
                    />
                    <separator />
                    <filter
                        name="scheduled_date_start"
                        string="Scheduled Date Start"
                        domain="[]"
                        context="{'group_by':'scheduled_date_start'}"
                    />
                    <filter
                        name="scheduled_date_end"
                        string="Scheduled Date End"
                        domain="[]"
                        context="{'group_by':'scheduled_date_end'}"
                    />
                    <separator />
                    <filter
                        name="date_start"
                        string="Actual Date Start"
                        domain="[]"
                        context="{'group_by':'date_start'}"
                    />
                    <filter
                        name="date_end"
                        string="Actual Date End"
                        domain="[]"
                        context="{'group_by':'date_end'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- TMS Order Pivot View -->
    <record id="tms_order_view_pivot" model="ir.ui.view">
        <field name="name">tms.order.view.pivot</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <pivot string="Trips" display_quantity="true">
                <field name="stage_id" type="row" />
            </pivot>
        </field>
    </record>

    <!-- TMS Order Graph View -->
    <record id="tms_order_view_graph" model="ir.ui.view">
        <field name="name">tms.order.view.graph</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <graph string="Trips" type="bar">
                <field name="name" type="row" />
                <field name="duration" type="measure" />
            </graph>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_tms_operation_trip" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">tree,pivot,form</field>
    </record>

    <record id="action_tms_report_order" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="help" type="html">
            <p>
                Trips Reports.
            </p>
        </field>
    </record>

    <record id="action_tms_config_stage_travel" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_tms_dash_order" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">kanban,tree,pivot,graph,form</field>
    </record>

    <record id="action_tms_order_kanban" model="ir.actions.act_window">
        <field name="name">Trips Kanban</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">kanban,tree,pivot,graph,form</field>
        <field name="context">{'default_team_id': active_id}</field>
        <field name="domain">[('team_id', '=', active_id)]</field>
    </record>

</odoo>
