<odoo>


    <!-- TMS Order Tree View -->
    <record id="tms_order_view_tree" model="ir.ui.view">
        <field name="name">tms.order.view.tree</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="stage" attrs="{'column_invisible': True}" />
                <field name="start_trip" attrs="{'column_invisible': True}" />
                <field name="end_trip" attrs="{'column_invisible': True}" />
                <field name="name" />
                <field name="driver_id" />
                <field name="route_id" optional="show" />
                <field name="origin_location_id" optional="show" />
                <field name="destination_location_id" optional="show" />
                <field name="priority" widget="priority" />
                <field
                    name="stage_id"
                    decoration-danger="stage == 'Cancelled'"
                    decoration-success="stage == 'Completed'"
                    decoration-muted="stage == 'Draft'"
                />
                <button
                    name="button_start_order"
                    type="object"
                    string="Start"
                    class="btn btn-primary text-uppercase"
                    attrs="{'invisible': ['|', ('start_trip', '=', True), ('end_trip', '=', True)]}"
                />
                <button
                    name="button_end_order"
                    type="object"
                    string="End"
                    class="btn btn-primary text-uppercase"
                    attrs="{'invisible': ['|', ('start_trip', '=', False), ('end_trip', '=', True)]}"
                />
            </tree>
        </field>
    </record>

    <!-- TMS Order Form View -->
    <record id="tms_order_view_form" model="ir.ui.view">
        <field name="name">tms.order.view.form</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <form>

                <!-- Invisible Fields -->
                <field name="active" invisible="1" />
                <field name="stage" invisible="1" />
                <field name="crew_active" invisible="1" />
                <field name="crew_ids_domain" invisible="1" />
                <field name="driver_ids_domain" invisible="1" />
                <field name="vehicle_ids_domain" invisible="1" />
                <field name="start_trip" invisible="1" />
                <field name="end_trip" invisible="1" />

                <!-- Header -->
                <header>
                    <button
                        name="button_start_order"
                        type="object"
                        string="Start"
                        class="btn btn-primary text-uppercase"
                        attrs="{'invisible': ['|', ('start_trip', '=', True), ('end_trip', '=', True)]}"
                    />
                    <button
                        name="button_refresh_duration"
                        type="object"
                        string="Refresh"
                        class="btn btn-secondary text-uppercase"
                        attrs="{'invisible': ['|', ('start_trip', '=', False), ('end_trip', '=', True)]}"
                    />
                    <button
                        name="button_end_order"
                        type="object"
                        string="End"
                        class="btn btn-primary text-uppercase"
                        attrs="{'invisible': ['|', ('start_trip', '=', False), ('end_trip', '=', True)]}"
                    />
                    <field
                        name="stage_id"
                        widget="statusbar"
                        domain="[('stage_type', '=', 'order')]"
                        options="{'clickable':True}, {'fold_field':'fold'}"
                    />
                </header>


                <!-- Sheet -->
                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">

                    </div>

                    <widget
                        name="web_ribbon"
                        title="Completed"
                        attrs="{'invisible': [('stage', '!=', 'Completed')]}"
                    />
                    <widget
                        name="web_ribbon"
                        title="Cancelled"
                        attrs="{'invisible': [('stage', '!=', 'Cancelled')]}"
                        bg_color="bg-danger"
                    />

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Trip Name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="team_id" groups="tms.group_tms_team" />

                            <field
                                name="crew_id"
                                groups="tms.group_tms_crew"
                                domain="[('id', 'in', crew_ids_domain)]"
                            />

                            <field
                                name="driver_id"
                                domain="[('id', 'in', driver_ids_domain)]"
                            />

                            <field
                                name="vehicle_id"
                                domain="[('id', 'in', vehicle_ids_domain)]"
                            />

                            <field name="priority" widget="priority" />

                        </group>
                        <group>
                            <field name="route" groups="tms.group_tms_route" />
                            <field
                                name="route_id"
                                attrs="{'invisible': [('route', '=', False)], 'required': [('route', '=', True)] }"
                            />
                            <field
                                name="origin_id"
                                attrs="{'invisible': [('route', '!=', False)]}"
                            />
                            <field
                                name="destination_id"
                                attrs="{'invisible': [('route', '!=', False)], 'required': [('route', '=', False)] }"
                            />
                        </group>
                    </group>
                    <group string="Description" name="description_grp">
                        <field
                            name="description"
                            nolabel="1"
                            colspan="2"
                            placeholder="Add a description for the order..."
                        />
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <page string="Planning" name="planning_page">
                            <group>
                                <field name="scheduled_date_start" />
                                <label for="scheduled_duration">Scheduled Duration
                                </label>
                                <div class="d-flex w-25">
                                    <field name="scheduled_duration" class="w-25" />
                                    <span class="w-75">Hours</span>
                                </div>
                                <field name="scheduled_date_end" />
                            </group>
                        </page>
                        <page string="Trip Tracking" name="tracking_page">
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                                <label for="duration">Duration</label>
                                <div class="d-flex w-25">
                                    <field name="duration" class="w-25" />
                                    <span class="w-75">Hours</span>
                                </div>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- TMS Order Kanban View -->
    <record id="tms_order_view_kanban" model="ir.ui.view">
        <field name="name">tms.order.view.kanban</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_dashboard o_emphasize_colors"
                default_group_by="stage_id"
                group_create="false"
                group_edit="false"
            >
                <field name="name" />
                <field name="vehicle_id" />
                <field name="route_id" />
                <field name="origin_location_id" />
                <field name="destination_location_id" />
                <field name="team_id" />
                <field name="crew_id" />
                <field name="driver_id" />
                <templates>
                    <t t-name="kanban-menu" groups="base.group_user">
                        <div class="container">
                            <div class="row">
                                <!-- TODO: All Views -->
                                <div
                                    class="col-6 o_kanban_card_manage_section o_kanban_manage_view"
                                >
                                    <h5
                                        role="menuitem"
                                        class="o_kanban_card_manage_title"
                                    >
                                        <span>View</span>
                                    </h5>
                                    <div role="menuitem" groups="tms.group_tms_route">
                                        <a type="object">Route
                                        </a> <!-- TODO: Action view route -> map view (name="action_view_route") -->
                                    </div>
                                </div>
                                <!-- TODO: Reporting -->
                                <div
                                    class="col-6 o_kanban_card_manage_section o_kanban_manage_reporting"
                                >
                                    <h5
                                        role="menuitem"
                                        class="o_kanban_card_manage_title"
                                    >
                                        <span>Reporting</span>
                                    </h5>
                                    <!-- TODO: Actions (name="action_...")  -->
                                    <div role="menuitem" class="o_kanban_task_analysis">
                                        <a type="object">Tasks Analysis</a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_settings row">
                                <!-- TODO: Color picker -->
                                <!-- <div role="menuitem" aria-haspopup="true" class="col-6">-->
                                <!-- <ul class="oe_kanban_colorpicker" data-field="color" role="popup"/>-->
                                <!-- </div>-->
                            </div>
                        </div>
                    </t>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="oe_kanban_global_click o_has_icon oe_kanban_content oe_kanban_card"
                        >
                            <div
                                class="o_project_kanban_main d-flex align-items-baseline gap-1"
                            >
                                <div class="o_kanban_card_content mw-100">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary me-5">
                                            <span
                                                class="o_text_overflow mb-2"
                                                t-att-title="record.name.value"
                                            >
                                                <t t-esc="record.name.value" />
                                            </span>
                                            <!-- VEHICLE -->
                                            <span
                                                class="o_text_overflow text-muted"
                                                t-if="record.vehicle_id.value"
                                            >
                                                <span
                                                    class="fa fa-car me-2"
                                                    aria-label="Vehicle"
                                                    title="Vehicle"
                                                />
                                                <t t-esc="record.vehicle_id.value" />
                                            </span>
                                            <!-- ROUTES -->
                                            <div class="text-muted o_row">
                                                <span
                                                    class="fa fa-map-o me-2"
                                                    title="Route"
                                                    groups="tms.group_tms_route"
                                                />
                                                <t t-if="record.route_id.raw_value">
                                                    <t t-esc="record.route_id.value" />
                                                    <span class="mx-2">:</span>
                                                </t>
                                                <t
                                                    t-esc="record.origin_location_id.value"
                                                />
                                                <i
                                                    class="fa fa-long-arrow-right mx-2 oe_read_only"
                                                    aria-label="Arrow icon"
                                                    title="Arrow"
                                                />
                                                <t
                                                    t-esc="record.destination_location_id.value"
                                                />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-3">
                                <div class="oe_kanban_bottom_left">
                                    <div
                                        t-if="record.team_id.raw_value or record.crew_id.raw_value"
                                        groups="tms.group_tms_team"
                                        class="text-muted o_row"
                                    >
                                        <i>
                                            <t
                                                t-if="record.team_id.raw_value"
                                                t-esc="record.team_id.value"
                                                groups="tms.group_tms_team"
                                            />
                                            <span
                                                t-if="record.team_id.raw_value and record.crew_id.raw_value"
                                                groups="tms.group_tms_crew"
                                            >&#032;/&#032;
                                            </span>
                                            <t
                                                t-if="record.crew_id.raw_value"
                                                t-esc="record.crew_id.value"
                                                groups="tms.group_tms_crew"
                                            />
                                        </i>
                                    </div>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="driver_id" widget="many2one_avatar" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

    <!-- TMS Order Search View -->
    <record id="tms_order_view_search" model="ir.ui.view">
        <field name="name">tms.order.search</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="team_id" string="Team" />
                <field name="stage" string="Stage" />
                <filter
                    name="is_active"
                    string="Archived"
                    domain="[('active', '=', 'False')]"
                />
                <group expand="0" string="Group By">
                    <filter
                        name="stage"
                        string="Stage"
                        domain="[]"
                        context="{'group_by':'stage_id'}"
                    />
                    <filter
                        name="stage"
                        string="Vehicle"
                        domain="[]"
                        context="{'group_by':'stage_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- TMS Order Pivot View -->
    <record id="tms_order_view_pivot" model="ir.ui.view">
        <field name="name">tms.order.view.pivot</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <pivot string="Trips" display_quantity="true">
                <field name="stage_id" type="row" />
            </pivot>
        </field>
    </record>

    <!-- TMS Order Graph View -->
    <record id="tms_order_view_graph" model="ir.ui.view">
        <field name="name">tms.order.view.graph</field>
        <field name="model">tms.order</field>
        <field name="arch" type="xml">
            <graph string="Trips" type="bar">
                <field name="name" type="row" />
                <field name="duration" type="measure" />
            </graph>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_tms_operation_trip" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">tree,pivot,form</field>
    </record>

    <record id="action_tms_report_order" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="help" type="html">
            <p>
                Trips Reports.
            </p>
        </field>
    </record>

    <record id="action_tms_config_stage_travel" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_tms_dash_order" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="action_tms_order_kanban" model="ir.actions.act_window">
        <field name="name">Trips Kanban</field>
        <field name="res_model">tms.order</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{'default_team_id': active_id}</field>
        <field name="domain">[('team_id', '=', active_id)]</field>
    </record>

</odoo>
