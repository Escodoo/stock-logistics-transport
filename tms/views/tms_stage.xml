<odoo>
    <!-- TMS Stage Tree View -->
    <record id="tms_stage_tree_view" model="ir.ui.view">
        <field name="name">tms.stage.tree</field>
        <field name="model">tms.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" groups="base.group_no_one" />
                <field name="name" />
                <field name="stage_type" />
                <field name="is_closed" />
            </tree>
        </field>
    </record>

    <!-- TMS Stage Form View -->
    <record id="tms_stage_form_view" model="ir.ui.view">
        <field name="name">tms.stage.form</field>
        <field name="model">tms.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="is_default" invisible="1" />
                            <field name="active" invisible="1" />
                            <field name="name" />
                            <field name="sequence" />
                            <field name="stage_type" />
                        </group>
                        <group>
                            <field name="custom_color" />
                            <field name="fold" />
                            <field name="is_closed" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                        </group>
                    </group>
                    <group string="Stage Description and Tooltips">
                        <p class="text-muted" colspan="2">
                            At each stage employees can block or make order/shipment ready
                            for next stage. You can define here labels that will be
                            displayed for the state instead of the default labels.
                        </p>
                        <label
                            for="legend_normal"
                            string=" "
                            class="o_status oe_project_kanban_legend"
                            title="Task in progress. Click to block or set as done."
                            aria-label="Task in progress. Click to block or set as done."
                            role="img"
                        />
                        <field name="legend_normal" nolabel="1" />
                        <label
                            for="legend_blocked"
                            string=" "
                            class="o_status o_status_red oe_project_kanban_legend"
                            title="Task is blocked. Click to unblock or set as done."
                            aria-label="Task is blocked. Click to unblock or set as done."
                            role="img"
                        />
                        <field name="legend_blocked" nolabel="1" />
                        <label
                            for="legend_done"
                            string=" "
                            class="o_status o_status_green oe_project_kanban_legend"
                            title="This step is done. Click to block or set in progress."
                            aria-label="This step is done. Click to block or set in progress."
                            role="img"
                        />
                        <field name="legend_done" nolabel="1" />

                        <p class="text-muted" colspan="2">
                            You can also add a description to help your coworkers
                            understand the meaning and purpose of the stage.
                        </p>
                        <field
                            name="description"
                            placeholder="Add a description..."
                            nolabel="1"
                            colspan="2"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TMS Stage Search View -->
    <record id="view_tms_stage_search" model="ir.ui.view">
        <field name="name">tms.stage.search</field>
        <field name="model">tms.stage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
                    name="is_active"
                    string="Archived"
                    domain="[('active', '=', False)]"
                />
                 <filter
                    name="group_stage_type"
                    string="Type"
                    domain="[]"
                    context="{'group_by':'stage_type'}"
                />
            </search>
        </field>
    </record>

    <!-- Actions -->

    <record id="action_tms_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">tms.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_stage_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Stage.
            </p>
        </field>
    </record>

</odoo>
