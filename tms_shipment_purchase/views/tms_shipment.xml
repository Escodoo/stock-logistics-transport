<odoo>

    <record model="ir.ui.view" id="tms_shipment_form_view">
        <field name="model">tms.shipment</field>
        <field name="inherit_id" ref="tms_shipment.tms_shipment_view_form" />
        <field name="arch" type="xml">
            <page name="amount_page" position="before">
                <page
                    name="purchases"
                    string="Purchases"
                    groups="purchase.group_purchase_user"
                >
                    <field name="purchase_ids" groups="purchase.group_purchase_user" />
                </page>
            </page>
            <xpath expr="//page[@name='amount_page']" position="inside">
                <group
                    name="amount_purchase_group"
                    string="Amount Purchases"
                    groups="purchase.group_purchase_user"
                >
                    <field
                        name="purchase_total_amount"
                        string="Total Purchase Amount"
                    />
                </group>
            </xpath>
        </field>
    </record>

