<odoo>

    <record model="ir.ui.view" id="tms_order_form_view">
        <field name="model">tms.order</field>
        <field name="inherit_id" ref="tms.tms_order_view_form" />
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="is_pickup_order" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="tms_order_tree_view">
        <field name="model">tms.order</field>
        <field name="inherit_id" ref="tms.tms_order_view_tree" />
        <field name="arch" type="xml">
            <field name="priority" position="before">
                <field name="is_pickup_order" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="tms_order_kanban_view">
        <field name="model">tms.order</field>
        <field name="inherit_id" ref="tms.tms_order_view_kanban" />
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="is_pickup_order" />
            </field>
            <xpath
                expr="//div[hasclass('o_kanban_record_subtitle')]/t"
                position="before"
            >
                <div t-if="record.is_pickup_order.raw_value" class="mb-2">
                    <span class="fa fa-level-down me-2" title="Is Pickup Order" />
                    <b class="ml-2" t-esc="'Is Pickup Order'" />
                </div>
            </xpath>
        </field>

    </record>

    <record model="ir.ui.view" id="tms_order_search_view">
        <field name="model">tms.order</field>
        <field name="inherit_id" ref="tms.tms_order_view_search" />
        <field name="arch" type="xml">
            <filter name="is_active" position="after">
                <separator />
                <filter
                    name="is_pickup_order"
                    string="Is Pickup Order"
                    domain="[('is_pickup_order', '=', True)]"
                />
                <filter
                    name="no_pickup_order"
                    string="No Pickup Order"
                    domain="[('is_pickup_order', '=', 'False')]"
                />
            </filter>
        </field>
    </record>

